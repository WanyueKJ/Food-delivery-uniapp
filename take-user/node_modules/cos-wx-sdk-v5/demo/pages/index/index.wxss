/**index.wxss**/
.title {
    display:block;
    box-sizing: border-box;
    padding: 0 5px;
    width: 100%;
    height: 30px;
    line-height: 30px;
    border-top: 1px solid #ccc;
    margin:auto;
    font-size:14px;
    color:#333;
    text-align: left;
    font-weight: bold;
}

.list-panel{
    width: 100%;
}

.sub-title{
    display:block;
    box-sizing: border-box;
    padding: 0 5px;
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size:12px;
    color:#333;
    text-align: left;
    font-weight: bold;
}

.list {
    margin-top: 10px;
    padding-bottom: 10px;
    width: 100%;
}

.button {
    float: left;
    margin: 0 3px 3px 0;
    text-align: left;
    font-size: 14px;
    height: 28px;
    line-height:28px;
    padding:0 10px;
}